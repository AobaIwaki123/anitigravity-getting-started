{
    "manifest_version": 3,
    "name": "スポーツ施設予約自動入力",
    "version": "1.1",
    "description": "スポーツ施設予約フォームを自動的に入力します。",
    "permissions": [
        "storage",
        "activeTab"
    ],
    "host_permissions": [
        "https://nut-sports.revn.jp/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "https://nut-sports.revn.jp/reservations/add*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ],
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    }
}